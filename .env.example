ENVIRONMENT=development

# Backend database + auth
DATABASE_URL=postgresql+psycopg://postgres:asdfA1234%4099@localhost:5432/aircanvas_pro
JWT_SECRET=replace-with-a-strong-secret
ADMIN_BOOTSTRAP_SECRET=admin-bootstrap-secret

# Storage
STORAGE_BUCKET=aircanvas-pro
S3_REGION=us-east-1
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
SIGNED_URL_TTL_SECONDS=900

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=false

# Backend exposure hardening
EXPOSE_BACKEND_PAGES=false
EXPOSE_API_DOCS=false
EXPOSE_HEALTH_ENDPOINTS=false
# Optional: allow health checks only when this header is passed:
# X-AirCanvas-Health-Key: <HEALTHCHECK_SECRET>
HEALTHCHECK_SECRET=

# Desktop runtime -> hosted backend connection
API_BASE_URL=http://127.0.0.1:8000
AIRCANVAS_API_BASE_URL=http://127.0.0.1:8000
AIRCANVAS_JWT_TOKEN=
AIRCANVAS_API_TIMEOUT_SEC=8

# Upload fallback
FRAME_UPLOAD_LOCAL_FALLBACK=1
FRAME_UPLOAD_FALLBACK_DIR=saves
